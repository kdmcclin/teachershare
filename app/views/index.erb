<div class="content-container">
  <h1>Welcome to TeacherShare!</h1>
  <h3 id="main-h3">The site where teachers help teachers do teachery things.</h3>

  <% if session[:user_id] %>
    <ul><%@lessons.each do |lesson| %>
      <li><%=lesson.created_at.to_s[5..10]%><a href='/lessons/<%=lesson.id%>'><%= lesson.title %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>Please sign up and/or log in to view lesson plans.</p>
  <% end %>
</div>
